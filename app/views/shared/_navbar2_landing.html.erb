<div class="inner">
  <h1><a href="/">Global Forest Watch - Climate</a></h1>
  <nav id="nav-mobile">
    <form class="mobile-show" action="/search">
      <svg class="icon"><use xlink:href="#shape-search"></use></svg>
      <input type="text" name="query" id="search-input" placeholder="Search GFW website">
    </form>
    <div id="google_translate_element_box2"></div>
    <div id="mobileMenu"></div>
    <ul class="mobile-hide">
      <li>
        <a <% if controller?("map") && action?("index") %>class="current"<% end %> href="/map">Map</a>
      </li>
      <li>
        <a <% if controller?("countries") && action?("index") || controller?("countries") && action?("show") %>class="current"<% end %> href="/countries">Country data</a>
      </li>
      <li>
        <a <% if controller?("compare") && action?("index") %>class="current"<% end %> href="/compare-countries">Country Comparisons</a>
      </li>
      <li>
        <a <% if (controller?("insights")) || (controller?("countries") && action?("pantropical"))  %>class="current"<% end %> href="/insights">Insights</a>
      </li>
      <li>
        <a <% if controller?("static") && action?("about") %>class="current"<% end %> href="/about">About</a>
      </li>
    </ul>
  </nav>
</div>
<% if content_for?(:header) %>
  <div class="l-layers-header">
    <div class="inner">
      <%= yield :header %>
    </div>
  </div>
<% end %>
