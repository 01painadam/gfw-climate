            //.header-country__display-options
              / ul
              /   li(data-display="all") list all
              /   li(data-display="theme") by theme
              /   li.is-selected (data-display="selector") selector
        .header-country__options-country

      .container-country__content-country

          section#reports.reports-content
            .inner
              .theme-tabs
                .themes
                  li (data-display="national") National data
                  li (data-display="subnational") Subnational data
                  li (data-display="areas-interest") Areas of interest
              .no-indicators-warning
                h3 There are no indicators
                button.addIndicators.btn.medium.blue add indicators
              .reports-grid
            section#reportIndicators.content-country__report-indicators.is-hidden
              .inner
                h3 Customize your report
                button.addIndicators.btn.medium.white(data-source="indicators") Add indicators
