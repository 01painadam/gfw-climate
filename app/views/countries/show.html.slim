.layout-content
  .l-toolbar
    .inner
      .m-toolbar
        ul.options
          li.options_item
            svg
              use (xlink:href="#shape-share")
            button#share-country share
          li.options_item
            svg
              use (xlink:href="#shape-share")
            button#print-country save/print report
          li.options_item
            svg
              use (xlink:href="#shape-country")
            a#analyze-country (href="#") analyze on map
  section#countryShowView (data-iso="#{@iso}")
    .container-country
      #headerCountry.container-country__header-country
        .inner
          .container-country__content
            .header-country__title-country
              h1 #{@name}
            .header-country__preview-country
              div (id="figure-#{@iso}")
        .display-tabs
          ul
            li (data-display="national") National data
            li (data-display="subnational") Subnational data
            li (data-display="areas-interest") Areas of interest
        .header-country__options-country

      .l-cutpoint#offsetTop

      .m-fixed-header#fixedHeaderView

      .container-country__content-country
        section#reports
          .inner
            .gridgraphs
          section#reportIndicators.more-indicators-warning.is-hidden
            .inner
              h3 Don't see what you're looking for?
              button.addIndicators.btn.medium.white(data-source="indicators") Customize indicators

      .l-cutpoint#offsetBottom
