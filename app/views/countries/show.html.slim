              a#analyze-country (href="#") analyze on map
  section#countryShowView (data-iso="#{@iso}")
    .container-country
      #headerCountry.container-country__header-country
        .inner
          .container-country__content
            .header-country__title-country
              h1 #{@name}
            //.header-country__selector-area-country
              / select#areaSelector.selector-area-country--white
              /   option.dark value="default" Select jurisdiction
