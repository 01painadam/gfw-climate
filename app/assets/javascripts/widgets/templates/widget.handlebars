<section class="country-widget">
  <div class="country-widget__header">
    <h2 class="country-widget__name">{{this.name}}</h2>
    <div class="options">
      <a class="close" href="#">Delete
        <svg>
          <use xlink:href="#shape-close"></use>
        </svg>
      </a>
      <a class="info" href="#">
        <svg>
          <use xlink:href="#shape-info"></use>
        </svg>
      </a>
      <a class="share" href="#">
        <svg>
          <use xlink:href="#shape-share"></use>
        </svg>
      </a>
    </div>
  </div>
  <div class="country-widget__content">

    {{#if this.tabs}}
      <ul class="tab-ul">
      {{#each this.tabs}}
        <li class="tab-li" data-position="{{this.position}}">
          <span class="name">{{this.name}}</span>
          {{#if this.subname}}<span class="subname">{{this.subname}}</span>{{/if}}
          {{#if this.ipcc}}<span class="ipcc">{{this.ipcc}}</span>{{/if}}
        </li>
      {{/each}}
      </ul>
      <div class="tab-content"></div>
    {{/if}}
  </div>
</section>
