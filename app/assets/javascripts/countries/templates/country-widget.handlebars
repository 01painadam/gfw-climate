<section class="country-widget" id="{{id}}">
  <div class="country-widget__header">
    <h2 class="country-widget__name">WIDGET TITLE</h2>
    <div class="options">
      <a class="close" href="#">Delete
        <svg>
          <use xlink:href="#shape-close"></use>
        </svg>
      </a>
      <a class="info" href="#">
        <svg>
          <use xlink:href="#shape-info"></use>
        </svg>
      </a>
      <a class="share" href="#">
        <svg>
          <use xlink:href="#shape-share"></use>
        </svg>
      </a>
    </div>
  </div>
  <div class="country-widget__content"></div>
</section>
