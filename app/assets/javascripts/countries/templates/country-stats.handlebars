<div class="header-country__stats">
  {{#if indcvsndc}}
    <h2> {{indcvsndc}} </h2>
  {{/if}}
  <div class="stats">
      <div class="stat">
        <span class="logo{{#unless economywidetarget}} -disabled{{/unless}}">
          <svg><use xlink:href="#icon-economy-wide-target"></use></svg>
        </span>
        <span class="description">
          Economy-Wide Target
          {{#if economywidetargetdescription}}
          <a class="btn-tooltip" href="#">
            <svg> <use xlink:href="#shape-info"></use> </svg>
            <span class="tooltip1">{{economywidetargetdescription}}</span>
          </a>
          {{/if}}
        </span>
      </div>
      <div class="stat">
        <span class="logo{{#unless landuseghg}} -disabled{{/unless}}">
          <svg><use xlink:href="#icon-land-use-ghg"></use></svg>
        </span>
        <span class="description">
          Land Use GHG Target
          {{#if landuseghgdescription}}
          <a class="btn-tooltip" href="#">
            <svg> <use xlink:href="#shape-info"></use> </svg>
            <span class="tooltip1">{{landuseghgdescription}}</span>
          </a>
          {{/if}}
        </span>
      </div>
      <div class="stat">
        <span class="logo{{#unless landusenonghg}} -disabled{{/unless}}">
          <svg><use xlink:href="#icon-land-use-non-ghg"></use></svg>
        </span>
        <span class="description">
          Land Use non-GHG Target
          {{#if landusenonghgdescription}}
          <a class="btn-tooltip" href="#">
            <svg> <use xlink:href="#shape-info"></use> </svg>
            <span class="tooltip1">{{landusenonghgdescription}}</span>
          </a>
          {{/if}}
        </span>
      </div>
      <div class="stat">
        <span class="logo{{#unless landuseexcluded}} -disabled{{/unless}}">
          <svg><use xlink:href="#icon-land-use-excluded"></use></svg>
        </span>
        <span class="description">
          Land Use Excluded
          {{#if landuseexcludeddescription}}
          <a class="btn-tooltip" href="#">
            <svg> <use xlink:href="#shape-info"></use> </svg>
            <span class="tooltip1">{{landuseexcludeddescription}}</span>
          </a>
          {{/if}}
        </span>
      </div>
  </div>
</div>
