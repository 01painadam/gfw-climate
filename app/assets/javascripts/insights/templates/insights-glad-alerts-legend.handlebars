<div class="list {{#if isDesforestation}}deforestation{{/if}}">

  {{#if isDesforestation}}
    <div class="item glad-alerts">
      <div class="heading">
        <div class="icon -no-icon"></div>
        <div class="label">Confirmed alerts</div>
      </div>
      <div class="value default">{{alerts}}</div>
    </div>

    <div class="item">
      <div class="heading">
        <div class="icon -line"></div>
        <div class="label">Deforestation to Date (ha)</div>
      </div>
      <div class="value">{{deforestation}}</div>
    </div>

    <div class="item">
      <div class="heading">
        <div class="icon -semidashed"></div>
        <div class="label">
          {{#if hasDifferentLabel}}2012{{else}}2001 - 2013{{/if}} Average (Mt CO<sub>2</sub>/yr)
        </div>
      </div>
      <div class="value">{{average_deforestation}}</div>
    </div>

    <div class="item">
      <div class="heading">
        <div class="icon -dashed"></div>
        <div class="label">2020 Target (ha/yr)</div>
      </div>
      <div class="value">{{target_deforestation}}</div>
    </div>

    <div class="item">
      <div class="heading">
        <div class="icon -no-icon"></div>
        <div class="label">Annual Budget Used to Date (%)</div>
      </div>
      <div class="value">{{annual_budget_deforestation}}</div>
    </div>
  {{else}}
    <div class="item glad-alerts">
      <div class="heading">
        <div class="icon -no-icon"></div>
        <div class="label">Confirmed alerts</div>
      </div>
      <div class="value default">{{alerts}}</div>
    </div>

    <div class="item">
      <div class="heading">
        <div class="icon -line"></div>
        <div class="label">Cumulative Emissions to Date (MtCO<sub>2</sub>)</div>
      </div>
      <div class="value">{{emissions}}</div>
    </div>

    <div class="item">
      <div class="heading">
        <div class="icon -semidashed"></div>
        <div class="label">
          {{#if hasDifferentLabel}}2012{{else}}2001 - 2013{{/if}} Average (Mt CO<sub>2</sub>/yr)
        </div>
      </div>
      <div class="value">{{average}}</div>
    </div>

    <div class="item">
      <div class="heading">
        <div class="icon -dashed"></div>
        <div class="label">2020 Target (Mt CO<sub>2</sub>/yr)</div>
      </div>
      <div class="value">{{target}}</div>
    </div>

    <div class="item">
      <div class="heading">
        <div class="icon -no-icon"></div>
        <div class="label">Annual Budget Used to Date (%)</div>
      </div>
      <div class="value default">{{annual_budget}}</div>
    </div>

  {{/if}}

</div>
