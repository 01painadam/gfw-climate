{{#if threshold}}
  <div class="layer-details layer-details-carbon_stocks" data-layer-group="carbon_stocks">
    <div class="total-carbon-bar">
      <ul class="labels">
        <li><em class="js-min-label">{{minvalue}}</em></li>
        <li><em class="js-max-label">{{maxvalue}} </em> <span class="units js-unit">{{{unit}}}</span></li>
      </ul>
      <span class="range-bar">|</span>
      <span class="range-bar">|</span>
      <div class="quartile-bar-biomass"></div>
    </div>
    <p class="canopy toggle-title">layer settings <span>â–º</span></p>
    <div class="toggle-legend-option" data-layer-toggle="biomass">
      <div class="toggle-container">
        <p class="canopy range">
          Show values between
          <span class="button-wrapper">
            <span class="canopy-button range min">
              <input type="number" class="js-min" step="1" value="{{minvalue}}"/>
            </span>
             and
            <span class="canopy-button range max">
              <input type="number" class="js-max" step="1" value="{{maxvalue}}"/>
            </span>
          </span>
        </p>
        {{#if units}}
          <div class="toggle-selector">
            <div class="label js-units-selector" data-layer="carbon_stocks">{{{unit}}}</div>
            <select class="selector js-units-list">
              {{#each units}}
                <option{{#if selected}} selected{{/if}} class="js-item" value="{{value}}">{{name}}</option>
              {{/each}}
            </select>
          </div>
        {{/if}}
      </div>
      <p class="canopy">
        Show areas with tree cover
        <span class="button-wrapper">
          <span class="canopy-button -wp"> > {{threshold}} %</span>
        </span>
      </p>
      <p class="canopy minavgmax">
        Uncertainty considered
        <span class="button-wrapper">
          <span class="canopy-button minavgmax">
            <span data-quantity="min">min</span>
            <span class="current" data-quantity="avg">mean</span>
            <span data-quantity="max">max</span>
          </span>
        </span>
      </p>
    </div>
  </div>
{{/if}}
